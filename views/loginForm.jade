doctype html
html
    head
        title Register 
    body
        form(method='POST', action='login')
            div.form-group
                label(for='name') Email  :
                input#name.form-control(type='text', placeholder='User Name', name='user_name')            
            div.form-group
                label(for='pw') Password :
                input#pw.form-control(type='password' name='user_pass')
                input#pw.form-control(type='hidden' name='redirect' value='true')
            
            button.btn.btn-primary(type='submit') Login In!
